<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorBackgroungHomepage"
    android:layout_height="match_parent">

<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimaryDark"
    >
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/chuf"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/custom_radiobuttongroup_homepage"
        >
        <RadioButton
            android:id="@+id/rd_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/where"
            android:button="@android:color/transparent"
            android:background="@drawable/custom_radio_where"
            android:padding="10dp"
            android:checked="true"
            android:textColor="@drawable/changetext_radio_homepage"

            />
        <RadioButton
            android:id="@+id/rd_eatWhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eatWhat"
            android:button="@android:color/transparent"
            android:background="@drawable/custom_radio_eat"
            android:padding="10dp"
            android:textColor="@drawable/changetext_radio_homepage"
            />
    </RadioGroup>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/ic_add_white_24dp"
        />
</androidx.appcompat.widget.Toolbar>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/viewPager" />
</LinearLayout>